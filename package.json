{
    "name": "pixair-image",
    "version": "1.0.0",
    "description": "This project helps you to generate a script to use Pixair API the easiest way",
    "main": "dist/index.js",
    "repository": "git@github.com:pixair/pixair-image.git",
    "author": "dev@pixair.io",
    "license": "MIT",
    "scripts": {
        "build": "rimraf dist; rollup -c",
        "build:watch": "rimraf dist; rollup -c -w",
        "dev": "npm-run-all --parallel serve:demo build:watch",
        "serve:demo": "serve",
        "test": "jest",
        "test:coverage": "jest --coverage=true",
        "test:watch": "jest --watch"
    },
    "devDependencies": {
        "@types/jest": "^27.0.1",
        "jest": "^27.2.0",
        "npm-run-all": "^4.1.5",
        "rimraf": "^3.0.2",
        "rollup": "^2.56.3",
        "rollup-plugin-terser": "^7.0.2",
        "rollup-plugin-typescript2": "^0.30.0",
        "serve": "^12.0.1",
        "ts-jest": "^27.0.5",
        "tslib": "^2.3.1",
        "typescript": "^4.4.3"
    },
    "jest": {
        "testEnvironment": "jsdom",
        "transform": {
            ".ts": "ts-jest"
        },
        "testRegex": "\\.test\\.ts$",
        "moduleFileExtensions": [
            "ts",
            "js"
        ]
    }
}
