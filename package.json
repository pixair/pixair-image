{
    "name": "pixair-image",
    "version": "1.0.0",
    "description": "The easiest way to use Pixair in your project",
    "main": "dist/index.js",
    "types": "dist/types/index.d.ts",
    "repository": "git@github.com:pixair/pixair-image.git",
    "author": "dev@pixair.io",
    "license": "MIT",
    "scripts": {
        "build": "rollup -c",
        "build:watch": "rollup -c -w",
        "dev": "npm-run-all --parallel serve:demo build:watch",
        "serve:demo": "serve",
        "test": "jest"
    },
    "devDependencies": {
        "@rollup/plugin-typescript": "^8.2.5",
        "@types/jest": "^27.0.1",
        "jest": "^27.1.0",
        "npm-run-all": "^4.1.5",
        "rollup": "^2.56.3",
        "rollup-plugin-terser": "^7.0.2",
        "serve": "^12.0.0",
        "ts-jest": "^27.0.5",
        "tslib": "^2.3.1",
        "typescript": "^4.4.2"
    },
    "jest": {
        "testEnvironment": "jsdom",
        "transform": {
            ".ts": "ts-jest"
        },
        "testRegex": "\\.test\\.ts$",
        "moduleFileExtensions": [
            "ts",
            "js"
        ]
    }
}
